<Window x:Class="Ephemera.Tiff.Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ephemera.Tiff.Demo"
        mc:Ignorable="d"
        Title="Ephemera.Tiff Demo" Height="204" Width="325">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Command="{Binding ViewTagsDemoCommand}" VerticalAlignment="Stretch">View Directores and Fields</Button>
        <Button Grid.Row="1" Command="{Binding AppendInMemoryDemoCommand}" VerticalAlignment="Stretch">Append in Memory</Button>
        <Button Grid.Row="2" Command="{Binding AppendToFileDemoCommand}" VerticalAlignment="Stretch">Append to File</Button>
        <Button Grid.Row="3" Command="{Binding MergeAllInFolderDemoCommand}" VerticalAlignment="Stretch">Merge All in Folder</Button>
    </Grid>
</Window>
